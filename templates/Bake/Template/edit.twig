<?php
/**
 * @var \{{ namespace }}\View\AppView $this
 * @var \{{ entityClass }} ${{ singularVar }}
 */

 $this->element('Avalon.Form/Templates/horiz-sm');
?>
{% set fields = Bake.filterFields(fields, schema, modelObject, indexColumns, ['binary', 'text']) %}
<div class="row">
    <div class="col">
        <legend>Edit {{singularHumanName}} - </legend>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card material">
            <div class="card-body">
                <div class="col-sm-6">
                    <?= $this->Form->create(${{ singularVar }}) ?>
                    	<?php
{% for field in fields %}
{% set columnData = Bake.columnData(field, schema) %}
{% if columnData.type in ['boolean'] %}
	                        echo $this->element('Avalon.Form/Components/Horiz/switch', [
                                'name' => '{{ field }}',
                                'entity' => ${{ singularVar }},
                            ]);
{% elseif field in ['created', 'created_by', 'modified', 'modified_by'] %}
{% else %}
	                        echo $this->Form->control('{{ field }}');
{% endif %}
{% endfor %}
                        ?>
                    <div class="text-center">
                        <?= $this->Form->button(__('Submit')) ?>
                    </div>
                    <?= $this->Form->end() ?>
                </div>
            </div>
        </div>
    </div>
</div>
