{
    "name": "wdarton/avalon",
    "description": "Avalon plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "4.4.*",
        "cakephp/authentication": "^2.10" 
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.3"
    },
    "autoload": {
        "psr-4": {
            "Avalon\\": "/vendor/wdarton/avalon/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Avalon\\Test\\": "plugins/Avalon/tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "extra": {
        "installer-paths": {
            "plugins/{$name}": ["wdarton/avalon"]   
        }
    }
}
